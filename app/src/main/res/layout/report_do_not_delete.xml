<?xml version="1.0" encoding="UTF-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    android:backgroundTintMode="add"
    tools:ignore="ExtraText">

    <Button
        android:id="@+id/report_incident"
        android:layout_width="248dp"
        android:layout_height="48dp"
        android:layout_marginBottom="60dp"
        android:width="248dp"
        android:backgroundTint="#000000"
        android:text="Report incident"
        android:textColor="#ffffff"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/description"
        android:layout_width="112dp"
        android:layout_height="19dp"
        android:layout_marginBottom="8dp"
        android:width="73dp"
        android:fontFamily="@font/roboto"
        android:text="Description:"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/enter_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.27"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <RadioGroup
        android:id="@+id/radioGroup23"
        android:layout_width="242dp"
        android:layout_height="195dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toTopOf="@+id/report_incident"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/fire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fire"
            android:textColor="@color/white"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

        <RadioButton
            android:id="@+id/flood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Flood"
            android:textColor="@color/white"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

        <RadioButton
            android:id="@+id/earthquake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Earthquake"
            android:textColor="@color/white"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

        <RadioButton
            android:id="@+id/strong_wind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Strong Wind"
            android:textColor="@color/white"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

    </RadioGroup>

    <EditText
        android:id="@+id/enter_description"
        android:layout_width="248dp"
        android:layout_height="48dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="#FFFFFF"
        android:editable="true"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:hint="@string/please_describe_the_insident"
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textColorHint="#AEFFFFFF"
        android:textSize="15dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/typeofalert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/typeofalert"
        android:layout_width="109dp"
        android:layout_height="19dp"
        android:layout_marginBottom="12dp"
        android:width="73dp"
        android:fontFamily="@font/roboto"
        android:text="Type of alert:"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup23"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.278"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_marginTop="108dp"
        android:text="Report an incident"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035" />
</androidx.constraintlayout.widget.ConstraintLayout>